{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "build",
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.test.ts"]
}
