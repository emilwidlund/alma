{
    "compilerOptions": {
        "lib": ["es2021"],
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "build",
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.spec.ts", "./src/**/*.test.ts"]
}
